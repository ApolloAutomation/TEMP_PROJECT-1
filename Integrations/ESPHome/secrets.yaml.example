# Copy this file to secrets.yaml and fill in your values
# secrets.yaml is already in .gitignore and will not be committed

# MQTT Configuration
mqtt_broker: "your-mqtt-broker.example.com"
mqtt_port: "1883"
mqtt_username: "your_username"
mqtt_password: "your_password"

# Static IP Configuration (set unique IP for each device)
static_ip: "192.168.1.100"
gateway: "192.168.1.1"
subnet: "255.255.255.0"

# WiFi Configuration (if using WiFi version)
wifi_ssid: "your_wifi_ssid"
wifi_password: "your_wifi_password"

# Sparkplug B Configuration (if using Sparkplug B version)
# Group ID is typically your organization or site name
# spb_group_id: "ApolloAutomation"
# Edge Node ID is set automatically from device name
